@model IEnumerable<GuildCarsMax.Models.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<div class="row">
    <h2>Users</h2>
</div>
<div class="row">
    @Html.ActionLink("Add a new User", "Register", "Account")
</div>
<div class="row">
    <div class="col-sm-12">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Role
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td id="roleName">@user.Role</td>
                            <td>@Html.ActionLink("Edit", "EditUser", "Account", new { userId = user.UserId }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        
    </div>
</div>

